<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @product.main_image unless @product.main_image.nil? %></p>
    </div>
    <div class="col-md-5">
      <h1><%= @product.code %></h1>
      <br>
      <p> [Description]<br>
      <%= @product.description %>
      <br><br>
      [Features]<br>
      <%= @product.features.gsub(/\n/,"<br>").html_safe %></p>
      [Category]<br>
      <%= @product.category.title %><br>
      <%= @product.category.parent %><br><br>
      [Badges]<br>
      <% @product.badges.each do |b| %>
        <%= b.title %><br>
      <% end %>
      <%= link_to 'Edit', edit_product_path(@product) if logged_in?(:site_admin) %>
      <%= link_to 'Back', products_path %>
    </div>
  </div>
</div>
