<h1>Edit Product</h1>
<%= form_for(@product) do |f| %>
  <div class="field"
    <%= f.label :code %>
    <%= f.text_field :code %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :features %>
    <%= f.text_area :features %>
  </div>
<% if false  %>
  <div class="field">
    <%= f.label :main_image %>
    <%= f.text_area :main_image %>
  </div>
<% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
