<h1>Products</h1>
<p>Product count: <%= @products.count %></p>
<%= link_to "Create new product", new_product_path %>
<% @products.each do |product| %>
  <p><%= link_to product.code, product_show_path(product) %></p>
  <p><%= product.description %></p>
  <p><%= product.features %></p>
  <p><%= image_tag product.main_image unless product.main_image.nil? %></p>
  <p><%= link_to "Edit", edit_product_path(product) %>
  <%= link_to 'Delete', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
